<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dp50"
    android:paddingRight="@dimen/dp50"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/popup"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_height="450dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/morn_bold"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp20"
                android:paddingStart="@dimen/dp15"
                android:text="New Update Download!"
                android:textColor="@color/colorBlack"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp20"
                android:fontFamily="@font/morn_regular"
                android:gravity="center_horizontal"
                android:paddingStart="@dimen/dp15"
                android:text="What's new in Qicpic?"
                android:textColor="@color/colorBlack"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_message_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/morn_regular"
                android:gravity="center_horizontal"
                android:paddingStart="@dimen/dp20"
                android:text="- New cleaner look for your Qicpic app!"
                android:textColor="@color/colorBlack"
                android:textSize="14dp" />

            <TextView

                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_message_data"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp10"
                android:fontFamily="@font/morn_regular"
                android:gravity="center_horizontal"
                android:paddingStart="@dimen/dp20"
                android:text="- More features coming soon!"
                android:textColor="@color/colorBlack"
                android:textSize="14dp" />

            <TextView

                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_1"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp10"
                android:fontFamily="@font/morn_regular"
                android:gravity="center_horizontal"
                android:paddingStart="@dimen/dp20"
                android:text="- Bug fixes and improvement!"
                android:textColor="@color/colorBlack"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_below="@+id/tv2"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginBottom="@dimen/dp20"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_later"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/morn_regular"
                    android:gravity="center"
                    android:padding="@dimen/dp10"
                    android:text="NOT NOW"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:visibility="gone" />

                <View
                    android:id="@+id/view_seperate"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@color/text_color_gray"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_update"
                    android:layout_width="@dimen/dp100"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_bg"
                    android:fontFamily="@font/morn_regular"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="UPDATE"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
