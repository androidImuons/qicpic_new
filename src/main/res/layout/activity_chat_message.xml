<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="chat"
            type="com.saqcess.qicpic.viewmodel.ChatMessageViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        tools:context=".view.activity.ActivityChatMessage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/dp50"
            android:weightSum="1">

            <include
                android:id="@+id/tool_bar_include"
                layout="@layout/view_chat_top_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                bind:chatbar="@{chat}"
                android:layout_weight="0.07">

            </include>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/gray_line">

            </View>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_chat_message"
                android:layout_width="match_parent"
               android:layout_marginTop="@dimen/dp5"
                tools:listitem="@layout/view_chat_list"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:weightSum="1"
            android:background="@drawable/ll_white_round_corner_20">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
              android:layout_marginStart="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp5"
                android:layout_weight="0.15"
                android:visibility="gone"
                android:gravity="center_vertical">

                <ImageView

                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_camer"
                    android:backgroundTint="@color/colorPrimaryDark">

                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textColorHint="@color/colorBlack"
                    android:fontFamily="@font/morn_regular"
                    android:hint="Message"
                    android:lines="6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_micq"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:background="@drawable/ic_mice"
                    android:backgroundTint="@color/colorPrimaryDark">

                </ImageView>
                <ImageView
                    android:id="@+id/iv_gallery"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_marginStart="@dimen/dp10"
                    android:background="@drawable/ic_galler"
                    android:backgroundTint="@color/colorPrimaryDark">

                </ImageView>
                <ImageView
                    android:id="@+id/iv_send"
                    android:visibility="gone"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_marginStart="@dimen/dp20"
                    android:background="@drawable/ic_send"
                    android:backgroundTint="@color/colorBlack">

                </ImageView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>
